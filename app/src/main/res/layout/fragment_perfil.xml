<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0">

        <TableRow>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fragment_perfil"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgPerfil"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="29dp"
                    android:src="@drawable/ic_perfil"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <ImageButton
                    android:id="@+id/imgEditFotoPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgPerfil"
                    android:layout_toEndOf="@+id/imgPerfil"
                    android:layout_toRightOf="@+id/imgPerfil"
                    android:background="@drawable/ic_menu_camera"
                    app:srcCompat="@drawable/ic_menu_camera" />

                <EditText
                    android:id="@+id/edtNombreCuidador"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imgPerfil"
                    android:layout_marginTop="42dp"
                    android:background="@drawable/shape"
                    android:ems="10"

                    android:gravity="center_vertical|center"
                    android:hapticFeedbackEnabled="true"
                    android:hint="Nombre Cuidador"
                    android:inputType="textPersonName"
                    android:enabled="true"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/edtApellidoCuidador"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edtNombreCuidador"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape"
                    android:ems="10"
                    android:gravity="center_vertical|center"
                    android:hint="Apellido Cuidador"
                    android:inputType="textPersonName"
                    android:enabled="true"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btnCambiarContraseña"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edtApellidoCuidador"
                    android:layout_marginTop="16dp"
                    android:text="Cambiar contraseña" />


                <ImageButton
                    android:id="@+id/imgEditPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:drawable/ic_menu_edit"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <ImageButton
                    android:id="@+id/imgActualizarPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:drawable/ic_menu_upload_you_tube"
                    android:visibility="invisible"
                    app:srcCompat="@android:drawable/ic_menu_upload_you_tube" />


            </RelativeLayout>
        </TableRow>
    </TableLayout>
</ScrollView>