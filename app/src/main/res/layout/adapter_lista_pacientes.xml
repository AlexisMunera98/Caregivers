<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Nombre: "
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/txtNombrePaciente"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:gravity="left|center" />

    <TextView

        android:id="@+id/edtCedulaPaciente"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@+id/txtNombrePaciente"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:gravity="left|center" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/edtCedulaPaciente"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Edad: "
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/edtEdadPaciente"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtNombrePaciente"
        android:layout_toRightOf="@+id/textView7"
        android:gravity="left|center" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/edtCedulaPaciente"
        android:layout_alignBottom="@+id/edtCedulaPaciente"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="CÃ©dula: "
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView7"
        android:text="Apellido: "
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/txtApellidoPaciente"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView9" />

</RelativeLayout>